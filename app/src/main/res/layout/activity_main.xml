<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.recipes.android.androidvisionapi.MainActivity"
    android:orientation="vertical"

    android:scaleType="centerCrop"
    android:background="@drawable/my_bg_anim"
    android:id="@+id/mylayout"
    >

    <ImageView
        android:id="@+id/formLogo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/ic_logoxxxhdpi"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="270dp"
        android:contentDescription="@string/image_area" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:background="@drawable/take_photo"
                android:text="@string/take_a_photo"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        android:background="@drawable/textbox"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:fontFamily="sans-serif"
        android:textSize="19sp" />

</LinearLayout>
